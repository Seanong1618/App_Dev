<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/loginbackground"
    tools:context=".Register">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10dp"
            >
           <ImageView
               android:layout_width="100dp"
               android:layout_height="100dp"
               android:layout_marginTop="10dp"
               android:layout_gravity="center"
               android:src="@drawable/reg"
               />
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Firstname"
                        android:background="@drawable/input"
                        android:padding="10dp"
                        android:id="@+id/signup_firstname"
                        android:inputType="text"
                        android:layout_marginBottom="10dp"
                        />
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Middle Name"
                        android:background="@drawable/input"
                        android:padding="10dp"
                        android:id="@+id/signup_middlename"
                        android:inputType="text"
                        android:layout_marginBottom="10dp"
                        />
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Last Name"
                        android:background="@drawable/input"
                        android:padding="10dp"
                        android:id="@+id/signup_lastname"
                        android:inputType="text"
                        android:layout_marginBottom="10dp"
                        />
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Address"
                        android:background="@drawable/input"
                        android:padding="10dp"
                        android:id="@+id/signup_address"
                        android:inputType="text"
                        android:layout_marginBottom="10dp"
                        />
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Contact Number"
                        android:background="@drawable/input"
                        android:padding="10dp"
                        android:id="@+id/signup_contactnumber"
                        android:inputType="number"
                        android:layout_marginBottom="10dp"
                        />
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Sex (M/F)"
                        android:background="@drawable/input"
                        android:padding="10dp"
                        android:id="@+id/signup_sex"
                        android:inputType="text"
                        android:layout_marginBottom="10dp"
                        />

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Age"
                        android:background="@drawable/input"
                        android:padding="10dp"
                        android:id="@+id/signup_age"
                        android:inputType="number"
                        android:layout_marginBottom="10dp"
                        />
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Username"
                        android:background="@drawable/input"
                        android:padding="10dp"
                        android:id="@+id/signup_username"
                        android:inputType="text"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="20dp"
                        />
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Password"
                        android:background="@drawable/input"
                        android:padding="10dp"
                        android:layout_marginBottom="10dp"
                        android:id="@+id/signup_password"
                        android:inputType="textPassword"
                        />
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Confirm Password"
                        android:background="@drawable/input"
                        android:padding="10dp"
                        android:layout_marginBottom="20dp"
                        android:id="@+id/signup_confirmpassword"
                        android:inputType="textPassword"
                        />

                    <Button
                        android:id="@+id/register"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="REGISTER"
                        android:textColor="@color/teal_700"
                        android:background="@drawable/signupbutton"
                        android:padding="15dp"/>
                </LinearLayout>
            </ScrollView>


        </LinearLayout>

</LinearLayout>